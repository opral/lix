{
  "name": "@lix-js/better-sqlite3-backend",
  "type": "module",
  "private": true,
  "version": "0.1.0",
  "description": "Node-only better-sqlite3 backend for the JS SDK",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "tsc -p tsconfig.json --noEmit && vitest run",
    "clean": "rm -rf ./dist ./node_modules"
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "js-sdk": "workspace:*",
    "better-sqlite3": "^12.4.1"
  },
  "devDependencies": {
    "typescript": "^5.5.4",
    "vitest": "^4.0.18"
  }
}
