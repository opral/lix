{
  "key": "plugin_md_v2",
  "runtime": "wasm-component-v1",
  "api_version": "0.1.0",
  "match": {
    "path_glob": "*.{md,mdx}",
    "content_type": "text"
  },
  "detect_changes": {
    "state_context": {
      "include_active_state": true,
      "columns": [
        "entity_id",
        "schema_key",
        "schema_version",
        "snapshot_content"
      ]
    }
  },
  "entry": "plugin.wasm",
  "schemas": [
    "schema/markdown_document.json",
    "schema/markdown_block.json"
  ]
}
