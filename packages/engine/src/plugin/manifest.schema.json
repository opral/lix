{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "key",
    "runtime",
    "api_version",
    "match",
    "entry",
    "schemas"
  ],
  "properties": {
    "key": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[a-z][a-z0-9_-]*$"
    },
    "runtime": {
      "type": "string",
      "enum": [
        "wasm-component-v1"
      ]
    },
    "api_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "match": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path_glob"],
      "properties": {
        "path_glob": {
          "type": "string",
          "minLength": 1
        },
        "content_type": {
          "type": "string",
          "enum": ["text", "binary"]
        }
      }
    },
    "detect_changes": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "state_context": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "include_active_state": {
              "type": "boolean"
            },
            "columns": {
              "type": "array",
              "minItems": 1,
              "uniqueItems": true,
              "items": {
                "type": "string",
                "enum": [
                  "entity_id",
                  "schema_key",
                  "schema_version",
                  "snapshot_content",
                  "file_id",
                  "plugin_key",
                  "version_id",
                  "change_id",
                  "metadata",
                  "created_at",
                  "updated_at"
                ]
              },
              "contains": {
                "const": "entity_id"
              }
            }
          },
          "allOf": [
            {
              "if": {
                "properties": {
                  "include_active_state": {
                    "const": true
                  }
                },
                "required": [
                  "include_active_state"
                ]
              },
              "then": {},
              "else": {
                "not": {
                  "required": [
                    "columns"
                  ]
                }
              }
            }
          ]
        }
      }
    },
    "entry": {
      "type": "string",
      "minLength": 1
    },
    "schemas": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
