{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "key",
    "runtime",
    "api_version",
    "detect_changes_glob"
  ],
  "properties": {
    "key": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[a-z][a-z0-9_-]*$"
    },
    "runtime": {
      "type": "string",
      "enum": [
        "wasm-component-v1"
      ]
    },
    "api_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "detect_changes_glob": {
      "type": "string",
      "minLength": 1
    },
    "entry": {
      "type": "string",
      "minLength": 1,
      "default": "plugin.wasm"
    }
  }
}
